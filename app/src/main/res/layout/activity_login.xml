<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:src="@drawable/login_logo"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="125dp"
                app:tint="@color/white"
                />

            <!-- Email -->
            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_image"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="17sp"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                >
            </EditText>

            <!-- Password -->
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_email"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:textSize="17sp"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                >
            </EditText>

            <!-- Login -->
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_password"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@color/blue_300"
                android:text="Login"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                >
            </Button>

            <!-- Reset password & Create new account -->
            <LinearLayout
                android:id="@+id/reset_or_create_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/login_button"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reset_password_link"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Reset password  |"
                    android:padding="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:background="@android:color/transparent"
                    >
                </Button>

                <Button
                    android:id="@+id/create_account_link"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Create new account"
                    android:padding="1dp"
                    android:layout_marginTop="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:background="@android:color/transparent">
                </Button>
            </LinearLayout>

            <!-- kakao login -->
            <EditText
                android:id="@+id/login_kakao_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/reset_or_create_line"
                android:text="Login using Kakao account"
                android:padding="2dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:background="@null">
            </EditText>

            <ImageButton
                android:id="@+id/login_kakao_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/login_kakao"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_kakao_link"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="180dp"
                android:background="@null">
            </ImageButton>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>